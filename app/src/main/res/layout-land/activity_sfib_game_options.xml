<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:weightSum="6">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/game_opt_but_diff"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/rounded_corner"
            android:text="@string/game_opt_but_diff"/>

        <Button
            android:id="@+id/game_opt_but_flag"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/rounded_corner"
            android:text="@string/game_opt_but_flag"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/game_opt_but_add_sent"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/rounded_corner"
            android:text="@string/game_opt_but_add_sent"/>

        <Button
            android:id="@+id/game_opt_but_grammar_help"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/rounded_corner"
            android:text="@string/game_opt_but_grammar_help"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

    <Button
        android:id="@+id/game_opt_but_player_stats"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_weight="0.5"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:background="@drawable/rounded_corner"
        android:text="@string/game_opt_but_player_stats"/>

    </LinearLayout>

</LinearLayout>
