<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/game_sfib_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/game_sfib_skip_button"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginTop="3sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/rounded_corner"
            android:text="@string/game_sfib_toggle" />

        <Button
            android:id="@+id/game_sfib_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/rounded_corner"
            android:text="@string/game_sfib_options_button"
            />
        <Button
            android:id="@+id/game_sfib_hint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/game_sfib_options_button"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="3sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:text="@string/game_sfib_hint_button"
            />

        <Button
            android:id="@+id/game_sfib_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@id/game_sfib_hint_button"
            android:layout_marginTop="3sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/rounded_corner"
            android:text="@string/game_sfib_submit_button"
            />

        <Button
            android:id="@+id/game_sfib_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/game_sfib_options_button"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="3sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:text="@string/game_sfib_skip_button"
            />

        <EditText
            android:id="@+id/game_sfib_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:layout_below="@id/game_sfib_options_button"
            android:layout_alignLeft="@id/game_sfib_toggle"
            android:text="@string/game_sfib_ans"
            />

        <TextView
            android:id="@+id/game_sfib_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff2d1dff"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_below="@id/game_sfib_options_button"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corner"
            android:text="0"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/game_sfib_eng_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5sp"
                android:text="@string/game_sfib_eng_sent"/>
             <TextView
                android:id="@+id/game_sfib_for_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2d1dff"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5sp"
                android:text="@string/game_sfib_for_sent_blank"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

